{
  "scripts": {
    "lint": "standardx -v",
    "build": "node ./build.mjs && ssc build .",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "start": "node ./build.mjs && ssc build -r -o",
    "test": "node ./build.mjs --test && ssc build --test=test.js --headless -r -o . | tap-arc"
  },
  "dependencies": {
    "@socketsupply/ssc-node": "^1.8.2",
    "@socketsupply/tonic": "^14.3.0"
  },
  "devDependencies": {
    "@socketsupply/ssc-test": "github:socketsupply/ssc-test",
    "@socketsupply/test-dom": "^0.4.1",
    "esbuild": "^0.15.11",
    "git-hooks-plus": "^1.0.1",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tapzero": "^0.6.1"
  },
  "eslintConfig": {
    "rules": {
      "indent": [ "error", 4 ]
    }
  },
  "standardx": {
    "ignore": [
      "public/*"
    ]
  }
}
